@{
    ViewData["Title"] = "Add Grade";
}

<h2>Add Grade for Student ID: @ViewBag.StudentId</h2>

<form method="post">
    <input name="subjectName" placeholder="Subject Name" required />
    <input name="grade" placeholder="Grade" type="number" step="0.01" required />
    <button type="submit">Add Grade</button>
</form>

<br />
<a href="/Student/Log/@ViewBag.StudentId">Compute Average</a>
